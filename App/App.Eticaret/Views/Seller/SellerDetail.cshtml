@model App.Models.DTO.Seller.SellerDetailDto

<section class="seller-detail spad">
    <div class="container">

        <!-- SELLER HEADER -->
        <div class="row mb-4">
            <div class="col-lg-12 text-center">
                <h2>@Model.FullName</h2>
            </div>
        </div>

        <!-- SELLER PRODUCTS -->
        <div class="row mb-3">
            <div class="col-lg-12">
                <h4>Seller's All Products</h4>
            </div>
        </div>

        <div class="row">
            @if (Model.Products != null && Model.Products.Any())
            {
                foreach (var product in Model.Products)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="product__item">
                            <div class="product__item__pic">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl)
                                                                                 ? "/img/product/default.jpg"
                                                                                 : product.ImageUrl)"
                             alt="@product.Name"
                             class="img-fluid" />
                    </div>

                            <div class="product__item__text text-center">
                                <h6>
                                    <a asp-controller="Home"
                                       asp-action="ProductDetail"
                                       asp-route-productId="@product.Id">
                                        @product.Name
                                    </a>
                                </h6>
                                <h5>@product.Price.ToString("C")</h5>
                            </div>
                        </div>
                    </div>
                        }
            }
            else
            {
                <div class="col-lg-12">
                    <p class="text-muted">This seller has no products yet.</p>
                </div>
            }
        </div>

    </div>
</section>
