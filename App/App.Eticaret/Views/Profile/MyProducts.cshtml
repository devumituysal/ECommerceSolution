@using App.Models.DTO.Product
@model List<ProductListItemDto>

@{
    ViewData["Title"] = "My Products";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}



<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>

        <!-- ➕ ADD PRODUCT -->
        <a asp-controller="Product"
           asp-action="Create"
           class="btn btn-success">
            + Add Product
        </a>
    </div>

    <partial name="Partials/ViewMessages" />

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Created</th>
                <th style="width:320px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl"
                                 alt="Product Image"
                                 style="width:60px;height:60px;object-fit:cover;border-radius:4px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>

                    <td>@product.Name</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Stock</td>
                    <td>@product.CreatedAt.ToShortDateString()</td>

                    <td>
                        <a asp-action="Edit"
                           asp-controller="Product"
                           asp-route-productId="@product.Id"
                           class="btn btn-primary btn-sm">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-controller="Product"
                              asp-route-productId="@product.Id"
                              method="post"
                              style="display:inline-block;"
                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>

                        <!-- Add Images -->
                        <form asp-action="AddImages"
                              asp-controller="Product"
                              asp-route-productId="@product.Id"
                              method="post"
                              enctype="multipart/form-data"
                              style="display:inline-block;">
                            <input type="file" name="images" multiple />
                            <button type="submit" class="btn btn-success btn-sm">
                                Add Image
                            </button>
                        </form>

                        <!-- Delete Image -->
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <form asp-action="DeleteImage"
                                  asp-controller="Product"
                                  asp-route-productId="@product.Id"
                                  method="post"
                                  style="display:inline-block;">
                                <input type="hidden"
                                       name="fileName"
                                       value="@System.IO.Path.GetFileName(product.ImageUrl)" />
                                <button type="submit" class="btn btn-warning btn-sm">
                                    Delete Image
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            You don't have any products yet.
        </div>
    }
</div>
