@model ProfileDetailsViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">

    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- 🔔 SUCCESS MESSAGE (only profile updates) -->
    @if (TempData["ProfileSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>@TempData["ProfileSuccessMessage"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ================= PROFILE SECTION ================= -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Profile" method="post">

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    Save Changes
                </button>

            </form>
        </div>
    </div>

    <!-- ================= ACTION BUTTONS ================= -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">My Actions</h5>
        </div>
        <div class="card-body d-flex gap-2 flex-wrap">

            <!-- ALL USERS -->
            <a asp-controller="Profile"
               asp-action="MyOrders"
               class="btn btn-outline-primary">
                📦 My Orders
            </a>

            <!-- SELLER ONLY -->
            @if (User.IsInRole("seller"))
            {
                <a asp-controller="Profile"
                   asp-action="MyProducts"
                   class="btn btn-outline-success">
                    🛒 My Products
                </a>
            }

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
