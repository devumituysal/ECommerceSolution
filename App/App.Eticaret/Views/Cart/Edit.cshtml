@using App.Eticaret.Controllers
@model List<CartItemViewModel>

@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    .shoping__cart__item img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #eee;
    }
</style>

<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@item.ProductImage" alt="@item.ProductName">
                                        <h5>@item.ProductName</h5>
                                    </td>

                                    <td class="shoping__cart__price">
                                        $@item.Price
                                    </td>

                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="number"
                                                       value="@item.Quantity"
                                                       min="1"
                                                       max="@item.ProductStockAmount"
                                                       data-max="@item.ProductStockAmount"
                                                       class="qty-input" />
                                            </div>
                                        </div>
                                    </td>

                                    <td class="shoping__cart__total">
                                        $@item.TotalPrice
                                    </td>

                                    <td class="shoping__cart__item__close">
                                        <form asp-controller="Cart"
                                              asp-action="Remove"
                                              method="post"
                                              style="display:inline;">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit"
                                                    class="icon_close"
                                                    style="border:none;background:none;">
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home"
                       asp-action="Listing"
                       class="primary-btn cart-btn">
                        &lt;&lt; CONTINUE SHOPPING
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>
                            Total
                            <span class="cart-total-price">
                                $@(Model.Sum(x => x.TotalPrice))
                            </span>
                        </li>
                    </ul>
                    <a asp-controller="Cart"
                       asp-action="Checkout"
                       class="primary-btn">
                        PROCEED TO CHECKOUT
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {

            $(".pro-qty").on("click", ".qtybtn", function () {

                const input = $(this).closest(".pro-qty").find("input");
                const max = parseInt(input.data("max"));
                let quantity = parseInt(input.val());

                if (quantity > max) {
                    quantity = max;
                    input.val(max);
                    alert("Bu ürün için maksimum stok miktarına ulaştınız.");
                }

                if (quantity < 1 || isNaN(quantity)) {
                    quantity = 1;
                    input.val(1);
                }

                const tr = $(this).closest("tr");
                const cartItemId = tr.find("input[name='cartItemId']").val();
                const currentPrice = parseFloat(
                    tr.find(".shoping__cart__price").text().replace("$", "").replace(",", ".")
                );

                $.ajax({
                    url: "@Url.Action(nameof(CartController.UpdateCart), "Cart")",
                    type: "POST",
                    data: {
                        cartItemId: cartItemId,
                        quantity: quantity
                    },
                    success: function () {

                        tr.find(".shoping__cart__total")
                          .text("$" + (currentPrice * quantity).toFixed(2));

                        const total = Array.from(
                            document.getElementsByClassName("shoping__cart__total")
                        )
                        .map(x => parseFloat(x.innerText.replace("$", "").replace(",", ".")))
                        .reduce((a, b) => a + b, 0);

                        $(".cart-total-price").text("$" + total.toFixed(2));
                    }
                });
            });

            $(".qty-input").on("input", function () {

                const max = parseInt($(this).data("max"));
                let val = parseInt($(this).val());

                if (isNaN(val) || val < 1) {
                    $(this).val(1);
                    return;
                }

                if (val > max) {
                    $(this).val(max);
                    alert("Bu ürün için maksimum stok miktarı: " + max);
                }
            });

        });
    </script>
}
