@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Phone</h4>
                    <p>+90 555 555 55 55</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Address</h4>
                    <p>Salihli / Manisa</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>SiliconShopGlobal@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Leave Message</h2>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        else if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }

        <form asp-controller="Home" asp-action="Contact" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <input asp-for="Name" placeholder="Your name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-lg-6 col-md-6">
                    <input asp-for="Email" placeholder="Your Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-lg-12 text-center mt-3">
                    <textarea asp-for="Message" placeholder="Your message" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="col-lg-12 text-center mt-3">
                    <button type="submit" class="site-btn">SEND MESSAGE</button>
                </div>
            </div>
        </form>
    </div>
</div>
