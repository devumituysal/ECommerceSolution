@model ProductDetailViewModel

<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    @if (Model?.ImageUrls?.Length > 0)
                    {
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                 src="@(Model.ImageUrls[0])" alt="@(Model.Name)">
                        </div>
                    }
                    <div class="product__details__pic__slider owl-carousel">
                        @if (Model?.ImageUrls != null)
                        {
                            foreach (var imageUrl in Model.ImageUrls)
                            {
                                <img data-imgbigurl="@imageUrl" src="@imageUrl" alt="@(Model.Name)">
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@(Model?.Name)</h3>

                    <div class="product__details__price">@Model.Price.ToString("C")</div>

                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="number" value="1" min="1">
                            </div>
                        </div>
                    </div>

                    <a href="#" class="primary-btn">ADD TO CART</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>

                    <ul>
                        <li><b>Category</b> <span>@(Model?.CategoryName)</span></li>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li>
                            <b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- tabs removed (no Description/Reviews in viewmodel) -->
        </div>
    </div>
</section>

