@model ProductDetailViewModel

@if (TempData["AddtoCartError"] != null)
{
    <div class="alert alert-danger">
        @TempData["AddtoCartError"]
    </div>
}
@if (TempData["AddtoCartSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["AddtoCartSuccess"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<section class="product-details spad">
    <div class="container">
        <div class="row">

            <!-- PRODUCT IMAGES -->
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">

                    <div class="product__details__pic__item product-image-fixed">
                        <img src="@(Model.ImageUrls != null && Model.ImageUrls.Length > 0
                                                                                                                                                        ? Model.ImageUrls[0]
                                                                                                                                                        : "/img/product/default.jpg")"
                             alt="@Model.Name"
                             class="img-fluid product-image" />
                    </div>

                    @if (Model.ImageUrls != null && Model.ImageUrls.Length > 1)
                    {
                        <div class="product__details__pic__slider owl-carousel">
                            @foreach (var imageUrl in Model.ImageUrls)
                            {
                                <img src="@imageUrl"
                                     data-imgbigurl="@imageUrl"
                                     alt="@Model.Name"
                                     class="product-thumb" />
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- PRODUCT INFO -->
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">

                    <h3>@Model.Name</h3>

                    <div class="product__details__price">
                        @Model.Price.ToString("C")
                    </div>

                    @if (Model.StockAmount > 0)
                    {
                        <div class="d-flex align-items-center gap-2">

                            <form asp-controller="Cart"
                                  asp-action="AddProduct"
                                  method="post">

                                <input type="hidden" name="productId" value="@Model.Id" />

                                <div class="product__details__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty">
                                            <input type="number"
                                                   name="quantity"
                                                   value="1"
                                                   min="1"
                                                   max="@Model.StockAmount" />
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="primary-btn">
                                    ADD TO CART
                                </button>
                            </form>

                            <!-- FAVORITE BUTTON -->
                            <a asp-controller="Favorite"
                               asp-action="@(Model.IsFavorite ? "Remove" : "Add")"
                               asp-route-productId="@Model.Id"
                               class="favorite-heart">

                                <i class="fa @(Model.IsFavorite ? "fa-heart" : "fa-heart-o")"></i>

                            </a>

                        </div>
                    }
                    else
                    {
                        <button class="primary-btn disabled" disabled>
                            SOLD OUT
                        </button>
                    }

                    <ul>
                        <li>
                            <b>Seller</b>
                            <span>
                                <a asp-controller="Seller"
                                   asp-action="SellerDetail"
                                   asp-route-id="@Model.SellerId"
                                   style="color:#7fad39; font-weight:600;">
                                    @Model.SellerName
                                </a>
                            </span>
                        </li>

                        <li>
                            <b>Category</b>
                            <span>@Model.CategoryName</span>
                        </li>
                        <li>
                            <b>Availability</b>
                            @if (Model.StockAmount > 0)
                            {
                                <span class="text-success">
                                    In Stock (@Model.StockAmount)
                                </span>
                            }
                            else
                            {
                                <span class="text-danger">
                                    Sold Out
                                </span>
                            }
                        </li>
                        <li>
                            <b>Shipping</b>
                            <span>01 day shipping. <samp>Free pickup today</samp></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- COMMENTS SECTION -->
        <div class="row mt-5">
            <div class="col-lg-12">

                <h4 class="mb-4">Customer Reviews</h4>

                @if (Model.Comments != null && Model.Comments.Any())
                {
                    foreach (var comment in Model.Comments)
                    {
                        <div class="border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>@comment.UserName</strong>

                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= comment.StarCount)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-star-o"></i>
                                        }
                                    }
                                </span>
                            </div>

                            <span class="text-muted small">
                                @comment.CreatedDate.ToString("dd.MM.yyyy")
                            </span>

                            <p class="mb-0 mt-2">@comment.Content</p>
                        </div>
                    }
                }
                else
                {
                    <p>No reviews yet. Be the first to comment!</p>
                }

                <!-- ADD COMMENT -->
                <div class="mt-4">
                    <h5>Add a Review</h5>

                    <form asp-controller="Comment"
                          asp-action="Create"
                          method="post">

                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="StarCount" id="StarCount" value="0" />

                        <div class="form-group mb-3">
                            <label>Rating</label>
                            <div id="starRating" class="text-warning fs-4">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fa fa-star-o star"
                                       data-value="@i"
                                       style="cursor:pointer;"></i>
                                }
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <textarea name="Text"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Write your review..."
                                      required></textarea>
                        </div>

                        <button type="submit" class="primary-btn">
                            Submit Review
                        </button>
                    </form>
                </div>

            </div>
        </div>

    </div>
</section>



<style>
    .product-image-fixed {
        width: 100%;
        height: 450px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        border-radius: 6px;
        overflow: hidden;
    }

    .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .product-thumb {
        width: 90px;
        height: 90px;
        object-fit: cover;
        cursor: pointer;
    }

    .favorite-btn:hover {
        transform: scale(1.1);
    }

    .favorite-heart {
        color: #e74c3c;
        text-decoration: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-left: 14px; 
    }

        .favorite-heart i {
            font-size: 26px; 
            transition: transform 0.15s ease, color 0.15s ease;
        }

        .favorite-heart:hover i {
            transform: scale(1.15);
            color: #c0392b;
        }
</style>

<script>
    const stars = document.querySelectorAll("#starRating .star");
    const starInput = document.getElementById("StarCount");

    stars.forEach(star => {
        star.addEventListener("click", function () {
            const value = this.getAttribute("data-value");
            starInput.value = value;

            stars.forEach(s => {
                if (s.getAttribute("data-value") <= value) {
                    s.classList.remove("fa-star-o");
                    s.classList.add("fa-star");
                } else {
                    s.classList.remove("fa-star");
                    s.classList.add("fa-star-o");
                }
            });
        });
    });
</script>
