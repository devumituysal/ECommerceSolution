@model ProductDetailViewModel

<section class="product-details spad">
    <div class="container">
        <div class="row">

            <!-- PRODUCT IMAGES -->
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@(Model.ImageUrls != null && Model.ImageUrls.Length > 0
                                                                                              ? Model.ImageUrls[0]
                                                                                              : "/img/product/default.jpg")"
                             alt="@Model.Name">
                    </div>

                    @if (Model.ImageUrls != null && Model.ImageUrls.Length > 1)
                    {
                        <div class="product__details__pic__slider owl-carousel">
                            @foreach (var imageUrl in Model.ImageUrls)
                            {
                                <img data-imgbigurl="@imageUrl"
                                     src="@imageUrl"
                                     alt="@Model.Name">
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- PRODUCT INFO -->
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.Name</h3>

                    <div class="product__details__price">
                        @Model.Price.ToString("C")
                    </div>

                    @* 🔴 ADD TO CART – stok varsa *@
                    @if (Model.StockAmount > 0)
                    {
                        <form asp-controller="Cart"
                              asp-action="AddProduct"
                              method="post">

                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div class="product__details__quantity">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="number"
                                               name="quantity"
                                               value="1"
                                               min="1"
                                               max="@Model.StockAmount"
                                               title="Maksimum alınabilecek adet @Model.StockAmount" />
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="primary-btn">
                                ADD TO CART
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="primary-btn disabled" disabled>
                            SOLD OUT
                        </button>
                    }

                    <ul>
                        <li>
                            <b>Category</b>
                            <span>@Model.CategoryName</span>
                        </li>
                        <li>
                            <b>Availability</b>
                            @if (Model.StockAmount > 0)
                            {
                                <span class="text-success">
                                    In Stock (@Model.StockAmount)
                                </span>
                            }
                            else
                            {
                                <span class="text-danger">
                                    Sold Out
                                </span>
                            }
                        </li>
                        <li>
                            <b>Shipping</b>
                            <span>01 day shipping. <samp>Free pickup today</samp></span>
                        </li>
                    </ul>

                </div>
            </div>

        </div>
    </div>
</section>
