
@model App.Eticaret.Models.ViewModels.ProductSaveViewModel

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            <h2 class="mb-3">Yeni Ürün Ekle</h2>

            @* Inline message area (geçici) *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @* Validation summary *@
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })


            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Kategori -->
                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="form-label">Kategori <span class="text-danger">*</span></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Kategori Seçin</option>

                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">
                                @category.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Ürün Adı -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Ürün Adı <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Ürün adı" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Fiyat -->
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Fiyat <span class="text-danger">*</span></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Stok -->
                <div class="form-group mb-3">
                    <label asp-for="StockAmount" class="form-label">Stok Adedi <span class="text-danger">*</span></label>
                    <input asp-for="StockAmount" class="form-control" type="number" min="1" />
                    <span asp-validation-for="StockAmount" class="text-danger"></span>
                </div>

                <!-- Açıklama -->
                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label">Ürün Açıklaması <span class="text-danger">*</span></label>
                    <textarea asp-for="Details" class="form-control" rows="5" placeholder="Ürün açıklaması"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <!-- Görseller -->
                <div class="form-group mb-3">
                    <label class="form-label">Ürün Fotoğrafları</label>
                    <input asp-for="Images" type="file" class="form-control" multiple accept="image/png, image/jpeg" />
                    <small class="form-text text-muted">PNG veya JPEG, birden fazla seçilebilir.</small>
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Oluştur</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
