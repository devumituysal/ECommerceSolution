@using Microsoft.AspNetCore.Mvc.Rendering
@model App.Eticaret.Models.ViewModels.ProductSaveViewModel

@{
    ViewData["Title"] = "Ürünü Düzenle";

    var categorySelectList = Model.Categories != null
        ? new SelectList(Model.Categories, "Id", "Name", Model.CategoryId)
        : Enumerable.Empty<SelectListItem>();

    var routeProductId = Context.GetRouteValue("productId");
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            <h2 class="mb-3">Ürünü Düzenle</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <form asp-action="Edit"
                  asp-route-productId="@(routeProductId)"
                  method="post"
                  enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="form-label">Kategori *</label>
                    <select asp-for="CategoryId"
                            class="form-control"
                            asp-items="categorySelectList">
                        <option value="">Kategori Seçin</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Ürün Adı *</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Fiyat *</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StockAmount" class="form-label">Stok *</label>
                    <input asp-for="StockAmount" class="form-control" type="number" min="0" />
                    <span asp-validation-for="StockAmount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label">Açıklama</label>
                    <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="MyProducts"
                       asp-controller="Profile"
                       class="btn btn-outline-secondary">
                        Geri
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
