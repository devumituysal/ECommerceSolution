@model List<App.Eticaret.Models.ViewModels.ProductListItemViewModel>

@using App.Services.Abstract
@inject ICategoryService CategoryService

@{
    ViewData["Hero"] = "hero-normal";
    ViewData["Title"] = "My Favorites";

    var categoryResult = await CategoryService.GetAllAsync();
    var categories = categoryResult.Value ?? new();
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>My Favorites</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">

            <!-- SIDEBAR -->
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">

                    <!-- CATEGORIES -->
                    <div class="sidebar__item">
                        <h4>Departments</h4>
                        <ul>
                            @foreach (var category in categories)
                            {
                                <li>
                                    <a href="/products/list?categoryId=@category.Id">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- PRICE (şimdilik dokunmadım) -->
                    <div class="sidebar__item">
                        <h4>Price</h4>
                        <div class="price-range-wrap">
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                 data-min="10" data-max="540">
                                <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            </div>
                            <div class="range-slider">
                                <div class="price-input">
                                    <input type="text" id="minamount">
                                    <input type="text" id="maxamount">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- PRODUCT LIST -->
            <div class="col-lg-9 col-md-7">

                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="filter__found">
                                <h6><span>@Model.Count</span> Products found</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @if (!Model.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-warning">
                                Henüz ürün bulunamadı.
                            </div>
                        </div>
                    }
                    else
                    {
                        @foreach (var product in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">

                                    <div class="product__item__pic set-bg"
                                         data-setbg="@(product.ImageUrl ?? "/img/product/default.jpg")">
                                        <ul class="product__item__pic__hover">
                                            <li>
                                                <a asp-controller="Favorite"
                                                   asp-action="@(product.IsFavorite ? "Remove" : "Add")"
                                                   asp-route-productId="@product.Id"
                                                   class="favorite-form">
                                                    @if (product.IsFavorite)
                                                    {
                                                        <i class="fa fa-heart"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-heart-o"></i>
                                                    }
                                                </a>
                                            </li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li>
                                                <a asp-controller="Home"
                                                   asp-action="ProductDetail"
                                                   asp-route-productId="@product.Id">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="product__item__text">
                                        <span>@product.CategoryName</span>
                                        <h6>
                                            <a asp-controller="Home"
                                               asp-action="ProductDetail"
                                               asp-route-productId="@product.Id">
                                                @product.Name
                                            </a>
                                        </h6>
                                        <h5>@product.Price.ToString("C")</h5>
                                    </div>

                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="product__pagination">
                    <a href="#" class="active">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
