@model List<App.Admin.Models.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<div class="row">

    <!-- All Orders -->
    <div class="col-xl-5 col-lg-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("~/Views/Shared/Partials/_OrderList.cshtml", Model)
            </div>
        </div>
    </div>


    <!-- Active Seller -->
    <div class="col-xl-5 col-lg-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Active Seller</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Seller</th>
                                <th>Total Product</th>
                                <th>Total Sales</th>
                                <th>Total Earning</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Store</td>
                                <td>42</td>
                                <td>320</td>
                                <td>$4,200</td>
                            </tr>
                            <tr>
                                <td>Elite Shop</td>
                                <td>30</td>
                                <td>210</td>
                                <td>$3,100</td>
                            </tr>
                            <tr>
                                <td>Fast Market</td>
                                <td>18</td>
                                <td>140</td>
                                <td>$1,980</td>
                            </tr>
                            <tr>
                                <td>Daily Store</td>
                                <td>12</td>
                                <td>95</td>
                                <td>$1,250</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Earnings -->
    <div class="col-xl-2 col-lg-12 mb-4">
        <div class="card shadow h-100 border-left-success">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                    Total Earnings
                </div>

                <div class="h4 font-weight-bold text-gray-800 mb-3">
                    $215,000
                </div>

                <div class="small text-muted">
                    Annual / Monthly
                </div>

                <hr />

                <div class="h6 text-gray-600 mb-0">
                    This Month
                </div>
                <div class="font-weight-bold text-success">
                    $18,400
                </div>
            </div>
        </div>
    </div>

</div>
