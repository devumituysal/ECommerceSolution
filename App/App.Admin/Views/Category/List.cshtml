@model List<CategoryListViewModel>
@{
    ViewData["Title"] = "Kategoriler";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["WarningMessage"]
    </div>
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex">
                <h4 class="card-title mr-auto mb-0">Kategoriler</h4>
                <a asp-action="Create" class="btn btn-primary">Add New Category</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-controller="Category"
                                           asp-action="Edit"
                                           asp-route-categoryId="@item.Id"
                                           class="btn btn-primary">
                                            Edit
                                        </a>

                                        <form asp-action="Delete"
                                              asp-route-categoryId="@item.Id"
                                              method="post"
                                              style="display:inline"
                                              onsubmit="return confirm('Silmek istediğine emin misin?')">

                                            @Html.AntiForgeryToken()

                                            <button type="submit" class="btn btn-danger btn-sm">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
