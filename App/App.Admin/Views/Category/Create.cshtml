@model SaveCategoryViewModel
@{
    ViewBag.Title = "New Category";
}

<div class="d-flex align-items-center mb-3">
    <h2 class="m-0">@ViewBag.Title</h2>
    <a asp-action="List" class="btn btn-primary ml-auto">Return To List</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var state in ViewData.ModelState.Values)
            {
                foreach (var error in state.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-controller="Category"
      asp-action="Create"
      method="post">

    <div class="form-group">
        <label asp-for="Name">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color">Renk</label>
        <input asp-for="Color" class="form-control" type="color" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
