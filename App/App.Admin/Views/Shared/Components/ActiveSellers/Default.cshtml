@model List<App.Admin.Models.ViewModels.ActiveSellerViewModel>

<div class="table-responsive">
    <table class="table table-sm table-bordered mb-0">
        <thead class="thead-light">
            <tr>
                <th>Seller</th>
                <th>Total Product</th>
                <th>Total Sales</th>
                <th>Total Earning</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.SellerFullName</td>
                    <td>@s.TotalProduct</td>
                    <td>@s.TotalSales</td>
                    <td class="font-weight-bold text-success">
                        @s.TotalEarning.ToString("N2") ₺
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-controller="Seller"
       asp-action="ActiveSellers"
       class="btn btn-sm btn-outline-primary">
        View All Active Sellers
    </a>
</div>


